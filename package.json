{
	"name": "ripply-waitlist",
	"private": true,
	"version": "0.0.0",
	"description": "Ripply Waitlist Page - Standalone deployment for GitHub Pages",
	"type": "module",
	"main": "index.js",
	"homepage": "https://ripplyapp.me",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
