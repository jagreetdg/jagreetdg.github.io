		"react-dom": "^18.3.1",
		"tailwind-merge": "^2.5.4"
	},
	"devDependencies": {
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
		"gh-pages": "^6.2.0",
		"postcss": "^8.5.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.6.3",
		"vite": "^5.4.11"
	},
	"keywords": [
